<%= form_with(model: [:admin, article]) do |f| %>
  <div class="form-group">
    <%= f.label :article_image %>
    <%= f.file_field :article_image, class: 'form-control mb-3', accept: 'image/*' %>
    <%= f.hidden_field :article_image_cache %>
  </div>
  <div class='mt-3 mb-3'>
    <%= image_tag article.article_image.url,
                  id: 'preview',
                  size: '300x200' %>
  </div>
  <div class="form-group">
    <%= f.label :category, 'カテゴリー', class: 'form-content'%>
    <%= f.select :category, {'最新情報': "最新情報", 'お得情報': 'お得情報','おすすめ情報': 'おすすめ情報','アレンジ情報': 'アレンジ情報'}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :summary %>
    <%= f.text_field :summary, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 10 %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>