<div class="login__width">
  <h1><%=t '.title' %></h1>
    <%= form_with model: @category, local: true do |f| %>
      <div class="form-group">
        <%= f.label :name, User.human_attribute_name(:name), class: 'login__form' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="actions text-center login__button">
        <%= f.submit (t 'defaults.register'), class: 'btn btn-primary' %>
      </div>
    <% end %>
</div>
