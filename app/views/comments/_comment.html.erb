<tr id="comment-<%= comment.id %>">
  <div class="balloon6">
    <div class="line-bc">
      <div class="faceicon">
        <%= image_tag comment.user.avatar_url, class: 'rounded-circle', size: '20x20' %>
        <div class="small"><%= comment.user.name %></div>
      </div>
      <div class="chatting">
        <div class="says">  
          <p id="js-comment-<%= comment.id %>">
            <%= simple_format(comment.body) %>
          </p>
        </div>
        <% if current_user.own?(comment) %>
              <%= link_to comment_path(comment),
                  class: 'js-delete-comment-button',
                  method: :delete,
                  data: { confirm: t('defaults.message.delete_confirm') },
                  remote: true do %>
                    <%= icon 'fa', 'trash' %>
                  <% end %>
            <% end %>
      </div>
    </div>
  </div>
</tr>