<%= stylesheet_link_tag 'search', :media => "all"%>
<%= search_form_for @q, url: url do |f| %>
  <div class="input-group mb-3 search-box">
    <div class='search-txt-box'>
      <%= f.search_field :title_cont, class: 'form-control search-txt', placeholder: t('defaults.search_word') %>
    </div>
    <div class='search-btn-box'>
      <i class="fas fa-search"></i>
      <%= f.submit class: 'btn btn-primary search-btn' %>
    </div>
  </div>
<% end %>