<%= form_with model: post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :arrange_content %>
    <%= f.text_area :arrange_content, class: 'form-control', rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: 'form-control', rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.label :one_point %>
    <%= f.text_field :one_point, class: 'form-control', rows: 10 %>
  </div>
 
  <%= f.submit class: 'btn btn-primary' %>
  
<% end %>