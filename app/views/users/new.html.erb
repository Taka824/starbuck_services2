<%= stylesheet_link_tag 'login', :media => "all"%>
<% content_for(:title, t('.title')) %>
<div class="login__width">
    <div class="logo-div">
        <div class="logo"><%= image_tag 'starbuck.png', class: 'login-image' %></div>
        <div class="title"><%=t '.title' %></div>
      </div>
    <%= form_with model: @user, local: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.text_field :name, class: 'form-control', placeholder: "名前" %>
    </div>
    <div class="form-group">
      <%= f.email_field :email, class: 'form-control', placeholder: "メールアドレス"%>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "パスワード確認" %>
    </div>
    <div class="actions text-center login__button">
      <%= f.submit (t 'defaults.register'), class: 'btn btn-primary' %>
    </div>
    <% end %>
    <div class='text-center'>
      <%= link_to (t 'defaults.login'), login_path, class: 'user-information'  %>
    </div>
</div>
  
