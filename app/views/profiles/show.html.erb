<%= stylesheet_link_tag 'login', :media => "all"%>
<% content_for(:title, t('.title'))%>
<div class="login__width">
  <div class="logo-div">
    <div class="logo"><%= image_tag 'starbuck.png', class: 'login-image' %></div>
    <div class="title"><%=t '.title' %></div>
  </div>
  <div class="logo-div">
    <div class="form-group avatar-show">
      <%= image_tag current_user.avatar.url, size: '50x50', class: 'rounded-circle' %>
      <%= t('.avatar') %>
    </div>
  </div>
  <div class="form-group form-float">
    <%= t('.email') %><br>
    <div class="mt-0"><%= current_user.email%></div>
  </div>
  <div class="form-group form-float">   
    <%= t('.name') %><br>
    <div class="mt-0"><%= current_user.name%></div>
  </div>          
  <div class="actions text-center login__button"> 
    <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn'%>
    <%= link_to t('defaults.retirements'), new_retirement_path, class: 'btn mt-5 mb-0' %>
  </div>
</div>