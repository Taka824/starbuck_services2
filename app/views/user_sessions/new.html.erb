<%= stylesheet_link_tag 'login', :media => "all"%>

  <div class="login__width">
      <h1><%=t '.title' %></h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :email, User.human_attribute_name(:email), class: 'login__form' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, User.human_attribute_name(:password), class: 'login__form' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="actions text-center login__button">
          <%= f.submit (t 'defaults.login'), class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class='text-center register__page'>
        <%= link_to (t '.to_register_page'), new_user_path %>
      </div>
      <div class='text-center password__forget'>
        <%= link_to 'Forgot Password?', new_password_reset_path %>
      </div>
  </div>
