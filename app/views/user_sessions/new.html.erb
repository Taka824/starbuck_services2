<%= stylesheet_link_tag 'login', :media => "all"%>
<% content_for(:title, t('.title')) %>
  <div class="login__width">
      <div class="logo-div">
        <div class="logo"><%= image_tag 'starbuck.png', class: 'login-image' %></div>
        <div class="title"><%=t '.title' %></div>
      </div>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <%= f.text_field :email, class: 'form-control', placeholder: "メールアドレス" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>
        </div>
        <div class="actions text-center login__button">
          <%= f.submit (t 'defaults.login'), class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class='text-center register__page'>
        <%= link_to (t '.to_register_page'), new_user_path, class: 'user-information' %><br>
        <%= link_to (t '.to_password_forget_page'), new_password_reset_path, class: 'user-information' %>
      </div>
      <%= link_to 'Login with Twitter', auth_at_provider_path(:provider => :twitter) %>
  </div>
