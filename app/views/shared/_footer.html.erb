<%= stylesheet_link_tag 'footer', :media => "all"%>
<footer class="footer">
  <div class="footer-box">
    <div class="logo">
      <%= image_tag 'starbuck.png', class: 'footer__image' %>
      <span class='logo__My'>My Favorite Starbucks Services</span>
    </div>
    <nav class='footer__nav'>
      <ul class="footer__ul">
        <li><%= link_to (t 'defaults.privacy'), term_path, class: 'footer__li__content' %></li>
        <li><%= link_to (t 'defaults.rule'), rule_path, class: 'footer__li__content' %></li>
        <li><%= link_to (t 'defaults.contact'), "#", class: 'footer__li__content' %></li>
      </ul>
    </nav>
  </div>
  <div class="footer__copyright">
      &copy; 2022 My Favorite Starbuck
  </div>
</footer>